                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="16dp"
                                    android:adjustViewBounds="true"
                                    app:srcCompat="@drawable/ic_expansion_header_indicator_grey_24dp" />

                            </RelativeLayout>

                        </com.github.florent37.expansionpanel.ExpansionHeader>

                        <com.github.florent37.expansionpanel.ExpansionLayout
                            android:id="@+id/itemDetailExpansionLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:expansion_expanded="false">

                            <LinearLayout
                                android:id="@+id/itemDetailContainer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:background="#EEE"
                                    android:gravity="center"
                                    android:text="content" />

                            </LinearLayout>

                        </com.github.florent37.expansionpanel.ExpansionLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="#CCC" />

                        <!-- 4th expansionPanel Shipping and Policies -->
                        <com.github.florent37.expansionpanel.ExpansionHeader
                            android:id="@+id/shippingPolicies"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:expansion_headerIndicator="@id/shippingPoliciesIndicator"
                            app:expansion_layout="@id/shippingPoliciesExpansionLayout"
                            app:expansion_toggleOnClick="true">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:background="@android:color/white"
                                android:paddingLeft="16dp"
                                android:paddingRight="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:text="Shipping and Policies"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                    android:textColor="#3E3E3E" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/shippingPoliciesIndicator"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="16dp"
                                    android:adjustViewBounds="true"
                                    app:srcCompat="@drawable/ic_expansion_header_indicator_grey_24dp" />

                            </RelativeLayout>

                        </com.github.florent37.expansionpanel.ExpansionHeader>

                        <com.github.florent37.expansionpanel.ExpansionLayout
                            android:id="@+id/shippingPoliciesExpansionLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:expansion_expanded="false">

                            <LinearLayout
                                android:id="@+id/shippingPoliciesContainer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:background="#EEE"
                                    android:gravity="center"
                                    android:text="content" />

                            </LinearLayout>

                        </com.github.florent37.expansionpanel.ExpansionLayout>


                    </com.github.florent37.expansionpanel.viewgroup.ExpansionsViewGroupLinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>




