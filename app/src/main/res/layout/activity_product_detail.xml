                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:expansion_openOnlyOne="true">


                        <!-- 1st expansionPanel Reviews -->
                        <com.github.florent37.expansionpanel.ExpansionHeader
                            android:id="@+id/reviewHeader"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:expansion_headerIndicator="@id/reviewHeaderIndicator"
                            app:expansion_layout="@id/reviewExpansionLayout"
                            app:expansion_toggleOnClick="true">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:background="@android:color/white"
                                android:paddingLeft="16dp"
                                android:paddingRight="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:text="1200 Reviews"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                    android:textColor="#3E3E3E" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/reviewHeaderIndicator"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="16dp"
                                    android:adjustViewBounds="true"
                                    app:srcCompat="@drawable/ic_expansion_header_indicator_grey_24dp" />

                            </RelativeLayout>

                        </com.github.florent37.expansionpanel.ExpansionHeader>

                        <com.github.florent37.expansionpanel.ExpansionLayout
                            android:id="@+id/reviewExpansionLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:expansion_expanded="false">

                            <LinearLayout
                                android:id="@+id/reviewContainer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:background="#EEE"
                                    android:gravity="center"
                                    android:text="content" />

                            </LinearLayout>

                        </com.github.florent37.expansionpanel.ExpansionLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="#CCC" />

                        <!-- 2nd expansionPanel Item Overview -->
                        <com.github.florent37.expansionpanel.ExpansionHeader
                            android:id="@+id/itemOverviewHeader"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:expansion_headerIndicator="@id/itemOverviewIndicator"
                            app:expansion_layout="@id/itemOverviewExpansionLayout"
                            app:expansion_toggleOnClick="true">

                            <RelativeLayout
